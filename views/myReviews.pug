extends base
block content
  section.section-reviews
    h2.tt.heading-secondary.ma-bt-lg #{title}
    .reviews
      each review in reviews
        .reviews__card
          .reviews__avatar
            img.reviews__avatar-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
            h6.reviews__user=review.tour.name
          p.reviews__text=review.review
          .reviews__rating
            each star in [1,2,3,4,5]
              svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active':'inactive'}`)
                use(xlink:href='/img/icons.svg#icon-star')
          a.btn.btn--green.span-all-rows(href=`/tour/${review.tour.slug}`) See The Tour
